{
    "name": "fuse-vscode",
    "displayName": "Fuse Extension",
    "description": "Plugin for Fuse, https://fuseopen.com",
    "author": "Fuse Open",
    "icon": "images/icon.png",
    "license": "See LICENSE",
    "version": "0.0.1",
    "publisher": "fuseopen",
    "repository": {
        "type": "git",
        "url": "https://github.com/fuse-open/Fuse.VSCodePlugin.git"
    },
    "homepage": "https://fuseopen.com/",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:uno",
        "onLanguage:unoproj",
        "onLanguage:ux",
        "onCommand:fuse.connect"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "fuse.preview.android",
                "title": "Fuse: Preview Android"
            },
            {
                "command": "fuse.preview.ios",
                "title": "Fuse: Preview iOS"
            },
            {
                "command": "fuse.preview.local",
                "title": "Fuse: Preview local"
            },
            {
                "command": "fuse.preview.local.debug",
                "title": "Fuse: Debug local"
            },
            {
                "command": "fuse.connect",
                "title": "Fuse: Connect to daemon"
            }
        ],
        "languages": [
            {
                "id": "unoproj",
                "aliases": [],
                "extensions": [
                    ".unoproj"
                ]
            },
            {
                "id": "uno",
                "aliases": [
                    "Uno",
                    "uno"
                ],
                "extensions": [
                    ".uno",
                    ".unotrace"
                ],
                "configuration": "./languages/uno.json"
            },
            {
                "id": "ux",
                "aliases": [
                    "UX"
                ],
                "extensions": [
                    ".ux"
                ],
                "configuration": "./languages/ux.json"
            }
        ],
        "grammars": [
            {
                "language": "uno",
                "scopeName": "source.uno",
                "path": "./syntax/uno.tmLanguage"
            },
            {
                "language": "ux",
                "scopeName": "text.xml",
                "path": "./syntax/ux.tmLanguage"
            },
            {
                "language": "unoproj",
                "scopeName": "text.unoproj",
                "path": "./syntax/unoproj.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
